<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:weightSum="100">


    <androidx.cardview.widget.CardView
        android:id="@+id/first_exercise"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="50"
        app:cardBackgroundColor="#BBA49D"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/first_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="вверх вниз"
            android:textAlignment="center"
            android:textColor="#3B2621"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/first_exercise_icon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/icon_up_down" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/second_exercise"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="50"

        android:backgroundTint="#BBA49D"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/second_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="вверх вниз"
            android:textAlignment="center"
            android:textColor="#3B2621"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/second_exercise_icon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/icon_up_down" />
    </androidx.cardview.widget.CardView>

</LinearLayout>